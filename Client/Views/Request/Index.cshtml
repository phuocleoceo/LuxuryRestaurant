@{
    ViewData["Title"] = "Request";
    ViewData["HomeActive"] = "";
    ViewData["MenuActive"] = "";
    ViewData["FoodActive"] = "";
    ViewData["RequestActive"] = "active";
}
@section MYCSS{
    <link href="@Url.Content("~/css/upsert.css")" rel="stylesheet" />
}

<section class="create-food-container">
    <h3 class="title">Request</h3>

    <div class="table-Container">
        <div class="box-container">
            <div class="form_row">
                <label class="form_label">Message</label>
                <textarea id="message" class="form_area" rows="3"></textarea>
            </div>
        </div>
        <div class="action-create">
            <button onclick="SendRequest()" class="btn">Send Request</button>
        </div>
    </div>
    <div>
        <div class="action-create">
            <button onclick="AskForPay()" class="btn">Ask For Pay</button>
        </div>
    </div>

</section>

@section Scripts{
    <script src="~/js/request.js"></script>
}