@model IEnumerable<Food>
@{
    ViewData["Title"] = "Menu";
}

<div class="row pb-3 backgroundWhite">

    @foreach (Food p in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="" class="card-img-top rounded" style="width: 100%; height: 27vw; object-fit: cover;" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@p.Name</b></p>
                            <p class="card-title text-primary"><b>@p.Description</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Price: <b class="">@(p.Price.ToString()+" VND")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@p.Id">
                            Add To Cart
                            <i class="fas fa-cart-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

